@model RegisterViewModel


<div class="row">



    <div class="col-6 offset-3" style="padding-top:50px">@*offset-3 sağdan ve soldan o kadarlık alanı kapatıyor ortadaki yapımızı sıkıştırmamızı sağlıyor ortaya doğru.*@
       <div class="card">

            <div class="card-header  fw-bold fs-5">Hesap Oluşturun</div>


            <div class="card-body">
               <form method="post" asp-controller="Auth"asp-action="Register">

                    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))@*Eğer error mesajın içi null değilse mesajı dön.Null değilse bir şey dönmüyor girmez zaten içine ve çalışmaz.*@
                    {
                        <div class="alert alert-danger fw-bold">
                            @ViewBag.ErrorMessage
                        </div>

                    }
                   <div class="mt-2">
                        <div>
                            <label class="required" asp-for="FirstName"></label>@*Label'daki asp-for'ların veri taşımaya bir etkisi yok.Sadece label'ın içine yazacağımızı bu şekilde getirdik.*@
                            <input asp-for="FirstName" type="text" class="form-control" />
                            <span  class="text-danger mt-1 fw-bold"asp-validation-for="FirstName"></span>@*ViewModel'de yaptığım düzenlemedeki hataların bu şekilde burda gözükmesini istedim.*@
                        </div>

                        <div>
                            <label class="required" asp-for="LastName"></label>
                            <input asp-for="LastName" type="text" class="form-control" />
                            <span class="text-danger mt-1 fw-bold" asp-validation-for="LastName"></span>

                        </div>

                        <div>
                            <label class="required" asp-for="Email"></label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span class="text-danger mt-1 fw-bold" asp-validation-for="Email"></span>

                        </div>

                        <div>
                            <label class="required" asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span class="text-danger mt-1 fw-bold" asp-validation-for="Password"></span>

                        </div>

                        <div>
                            <label class="required" asp-for="PasswordConfirm"></label>
                            <input asp-for="PasswordConfirm" type="password" class="form-control" />
                            <span class="text-danger mt-1 fw-bold" asp-validation-for="PasswordConfirm"></span>

                        </div>
                   </div>

                   <button type="submit" class="btn btn-primary mt-3 form-control fw-bold">Kayıt Ol</button>

               </form>
            </div>




       </div>

    </div>
</div>

