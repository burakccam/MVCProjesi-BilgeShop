@model LoginViewModel
<form method="post" asp-controller="Auth" asp-action="Login" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">

    <div class="d-flex">
        <input asp-for="Email" type="email" class="form-control form-control-dark text-bg-dark me-2">
        <input asp-for="Password" type="password" class="form-control form-control-dark text-bg-dark">
        <button type="submit" class="btn btn-warning ms-2">Giriş</button>
        <buton id="iptal" type="button" class="btn btn-outline-warning ms-2">İptal</buton>
    </div>


</form>